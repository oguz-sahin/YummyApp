<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_4sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.mask.PorterShapeImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_margin="@dimen/_8sdp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:siShape="@drawable/shape_rounded_rectangle"
            app:siSquare="true">

        </com.github.siyamed.shapeimageview.mask.PorterShapeImageView>


        <TextView

            android:id="@+id/food_name_tv"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_12sdp"
            android:fontFamily="@font/exo_semibold"
            android:gravity="start"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image"
            app:layout_constraintTop_toTopOf="@+id/image" />


        <TextView

            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo_semibold"
            android:gravity="start"
            android:textColor="#994a4a4a"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="@+id/iconone"
            app:layout_constraintTop_toBottomOf="@+id/iconone" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:src="@mipmap/ant_design_plus_circle_outlined"
            app:layout_constraintBottom_toBottomOf="@+id/image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/food_name_tv" />

        <ImageView
            android:id="@+id/iconone"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/icontwo"
            app:layout_constraintStart_toStartOf="@+id/food_name_tv"
            app:layout_constraintTop_toBottomOf="@+id/food_name_tv" />

        <ImageView
            android:id="@+id/icontwo"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iconthree"
            app:layout_constraintStart_toEndOf="@+id/iconone"
            app:layout_constraintTop_toBottomOf="@+id/food_name_tv" />

        <ImageView
            android:id="@+id/iconthree"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iconfour"
            app:layout_constraintStart_toEndOf="@+id/icontwo"
            app:layout_constraintTop_toBottomOf="@+id/food_name_tv"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/iconfour"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintBottom_toBottomOf="@+id/iconfive"
            app:layout_constraintStart_toEndOf="@+id/iconthree"
            app:layout_constraintTop_toBottomOf="@+id/food_name_tv"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iconfive"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintStart_toEndOf="@+id/iconfour"
            app:layout_constraintTop_toBottomOf="@+id/food_name_tv" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>