<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardScreen.SliderFragment">

    <!-- TODO: Update blank fragment layout -->


    <ImageView
        android:id="@+id/slide_iv"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_android"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:layout_width="@dimen/_240sdp"
        android:id="@+id/slide_baslik_tv"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo_semibold"
        android:gravity="center"
        android:text="@string/lezzetliMenüseç"
        android:textColor="@color/ColorMain"
        android:textSize="@dimen/_30sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_iv" />

    <TextView

        android:layout_width="@dimen/_230sdp"
        android:id="@+id/slide_aciklama_tv"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/exo"
        android:gravity="center_horizontal"
        android:text="@string/lezzetlimenütext"
        android:textColor="@color/ColorMain"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@+id/slide_baslik_tv"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/slide_baslik_tv"
        app:layout_constraintTop_toBottomOf="@+id/slide_baslik_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>